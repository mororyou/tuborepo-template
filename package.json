    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "^1.11.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/configs/*"
